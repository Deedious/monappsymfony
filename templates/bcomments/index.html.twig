{% extends 'base.html.twig' %}

{% block title %}Bcomments index{% endblock %}

{% block body %}
    <h1>Bcomments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bcomment in bcomments %}
            <tr>
                <td>{{ bcomment.id }}</td>
                <td>{{ bcomment.contenu }}</td>
                <td>
                    <a href="{{ path('app_bcomments_show', {'id': bcomment.id}) }}">show</a>
                    <a href="{{ path('app_bcomments_edit', {'id': bcomment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bcomments_new') }}">Create new</a>
{% endblock %}
